            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/textAppearanceListItemSmall"
            android:text="null"
            android:layout_marginStart="@dimen/text_margin"
            />

        <!-- campaign id -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/textAppearanceSmall"
            android:text="@string/campaign_id_label"
            />
        <TextView
            android:id="@+id/campaign_id_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/textAppearanceListItemSmall"
            android:text="null"
            android:layout_marginStart="@dimen/text_margin"
            />

        <!-- campaign display order -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/textAppearanceSmall"
            android:text="@string/campaign_display_order_label"
            />
        <TextView
            android:id="@+id/campaign_display_order_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/textAppearanceListItemSmall"
            android:text="null"
            android:layout_marginStart="@dimen/text_margin"
            />

        <!-- campaign type id -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/textAppearanceSmall"
            android:text="@string/campaign_type_id_label"
            />
        <TextView
            android:id="@+id/campaign_type_id_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/textAppearanceListItemSmall"
            android:text="null"
            android:layout_marginStart="@dimen/text_margin"
            />

        <!-- campaign type id -->

        <!-- category name -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/textAppearanceSmall"
