<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ItemDetailFragment"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/text_margin"
        >

        <!-- app id -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/textAppearanceSmall"
            android:text="@string/app_id_label"
            />
        <TextView
            android:id="@+id/app_id_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/textAppearanceListItemSmall"
            android:text="null"
            android:layout_marginStart="@dimen/text_margin"
            />

        <!-- name -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/textAppearanceSmall"
            android:text="@string/product_name_label"
            />
        <TextView
            android:id="@+id/product_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/textAppearanceListItemSmall"
            android:text="null"
            android:layout_marginStart="@dimen/text_margin"
            />

        <!-- product id -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/textAppearanceSmall"
            android:text="@string/product_id_label"
            />
        <TextView
            android:id="@+id/product_id_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/textAppearanceListItemSmall"
            android:text="null"
            android:layout_marginStart="@dimen/text_margin"
            />

        <!-- product desc -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/textAppearanceSmall"
            android:text="@string/product_desc_label"
            />
        <TextView
            android:id="@+id/product_desc_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/textAppearanceListItemSmall"
            android:text="null"
            android:layout_marginStart="@dimen/text_margin"
            />

        <!-- rating -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/textAppearanceSmall"
            android:text="@string/rating_label"
            />
        <TextView
            android:id="@+id/rating_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/textAppearanceListItemSmall"
            android:text="null"
            android:layout_marginStart="@dimen/text_margin"
            />

        <!-- average rating url -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/textAppearanceSmall"
            android:text="@string/average_rating_url_label"
            />
        <ImageView
            android:id="@+id/average_rating_url_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_margin"
            />
        <TextView
            android:id="@+id/average_rating_url_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/textAppearanceListItemSmall"
            android:text="null"
            android:layout_marginStart="@dimen/text_margin"
            />
        <!-- only used if an error loading image (which there are!) -->
        <TextView
            android:id="@+id/average_rating_err_label_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/error"
            android:layout_marginStart="@dimen/text_margin"
            android:text="@string/average_rating_url_error_label"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/average_rating_url_err_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/textAppearanceListItemSmall"
            android:layout_marginStart="@dimen/text_margin"
            android:visibility="gone"
            />

        <!-- bid rate -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/textAppearanceSmall"
            android:text="@string/bid_rate_label"
            />
        <TextView
            android:id="@+id/bid_rate_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/textAppearanceListItemSmall"
            android:text="null"
            android:layout_marginStart="@dimen/text_margin"
            />

        <!-- billing type id -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/textAppearanceSmall"
            android:text="@string/billing_type_id_label"
